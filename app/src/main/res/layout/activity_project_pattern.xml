<!-- Layout for the pattern; seen via creating a new project or "Current Projects" -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="group8.comp3900.year2014.com.bcit.dogsweater.ProjectPattern">
    <group8.comp3900.year2014.com.bcit.dogsweater.SlideMenu
        android:id="@+id/slideMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <TextView
        android:paddingLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:id="@+id/patternTitle"
        android:text="TEMP PROJ NAME"
        android:textColor="@color/peach"
        android:textSize="28sp"/>
    <TextView
        android:paddingLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:id="@+id/patternSection"
        android:text="TEMP"
        android:textColor="@color/gray"
        android:textSize="20sp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/patternTaskList"
            android:orientation="vertical">
            <!-- Test step
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:text="This is a test step to determine if this is
            actually working properly because i'm
            not sure to be honest it could be totally fine."/>
            <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
            </LinearLayout>
            End test step -->
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_horizontal"
            android:weightSum="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="-"
                android:textColor="@color/white"
                android:background="@color/teal"
                android:textSize="20sp"
                android:onClick="decrementRow"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:text="0"
                android:textSize="25sp"
                android:gravity="center"
                android:id="@+id/patternRowCounter"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="+"
                android:textColor="@color/white"
                android:background="@color/teal"
                android:textSize="20sp"
                android:onClick="incrementRow"/>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/patternBottom"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center_horizontal">
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/patternBackButton"
                android:layout_weight="0.35"
                android:scaleType="fitXY"
                android:background="@null"
                android:src="@drawable/next_button_style"
                android:text="Back"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="0.35"
                android:layout_height="wrap_content"
                android:id="@+id/patternNextButton"
                android:src="@drawable/next_button_style"
                android:background="@null"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>