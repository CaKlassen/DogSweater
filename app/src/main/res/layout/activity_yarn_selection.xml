<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group8.comp3900.year2014.com.bcit.dogsweater.YarnSelection"
    android:orientation="vertical">

    <TextView
        android:text="@string/yarnSelection"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/yarnText"
        android:layout_weight="0.25"
        android:textSize="40sp"/>

    <TextView
        android:text="Color:"
        android:layout_width="85dp"
        android:layout_height="0dp"
        android:id="@+id/yarnColor"
        android:layout_weight="0.08"
        android:textSize="20sp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/colors"
        android:entries="@array/colors"
        android:layout_weight="0.145"
        android:textSize="50sp"
        android:ellipsize="marquee"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1" />

    <TextView
        android:text="Yarn Type:"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/yarnType"
        android:layout_weight="0.08"
        android:textSize="20sp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/types"
        android:entries="@array/types"
        android:ellipsize="marquee"
        android:layout_weight="0.140"
        android:textSize="50sp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/nextButton"
        android:id="@+id/Next"
        android:layout_gravity="bottom"
        android:onClick="next"/>

</LinearLayout>
