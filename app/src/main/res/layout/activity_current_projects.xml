<!-- Gridview of all current projects; via current projects button on home  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<group8.comp3900.year2014.com.bcit.dogsweater.SlideMenu
    android:id="@+id/slideMenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="PROJECTS"/>

<GridView
    android:id="@+id/projectGridView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:horizontalSpacing="@dimen/activity_vertical_margin"
    android:numColumns="auto_fit"
    android:verticalSpacing="16dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    />

</LinearLayout>