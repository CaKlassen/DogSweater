<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation = "vertical"
    tools:context="group8.comp3900.year2014.com.bcit.dogsweater.DogProfileCreation">

    <group8.comp3900.year2014.com.bcit.dogsweater.SlideMenu
        android:id="@+id/slideMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/imageDescDimension"
        android:id="@+id/imageView"
        android:src="@drawable/dog_diagram"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/profileCreationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileText"
        android:textSize="30sp"
        android:layout_below="@id/imageView"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileText"
        android:layout_alignParentStart="true"
        android:orientation="horizontal" >

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:textSize="30sp"
            android:hint="@string/hintDimension"
            android:id="@+id/measureA" />

        <TextView
            android:text="Unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unit_text"
            android:textSize="30sp" />

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Info"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/dyi_icon_info"
        android:background="@color/white"
        android:onClick="info" />


    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Next"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/next_button_style"
            android:background="@color/white"
            android:onClick="next" />


</RelativeLayout>
